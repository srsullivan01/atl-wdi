<main>

	<h2>EDIT THIS DONUT!</h2>

	<a href="/">Return to Home Page</a>

	<div id="edit-form" class="donut-container-show">
	<form action = "/donuts/{{donut._id}}?_method=PUT">
		<input type="text" placeholder="name" name="name" value="{{donut.name}}">
		<input type="text" placeholder="description" name="description" value="{{donut.description}}">
		<input type="number" placeholder="price" name="price" value="{{donut.price}}">
		<input type="number" placeholder="qty" name="qty" value="{{donut.qty}}">
	</form>



		<div id="img-preview">
			<img src="{{donut.img}}">
		</div>

	</div>
</main>
